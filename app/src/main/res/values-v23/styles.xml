<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar"> <!-- DarkActionBar changed to NoActionBar -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainApplicationColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:listDivider">@color/grey</item>

        <!-- Status Bar theme here. -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar"> <!-- DarkActionBar changed to NoActionBar -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status Bar theme here. -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/mainApplicationColor</item>
    </style>

    <!-- RochoesFontStyle -->
    <style name="RochoesFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fredoka</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>

